#include <stdlib.h>
#include <stdio.h>
#include <time.h>
#include <string.h>
#include <unistd.h>

int main() {
    srand(time(NULL));
    int num = (rand() % 10);
    int delay = (rand() % 3 + 1);
    int i = 0;
    char wordsArr[10][20] = {
    "computer",
    "keyboard",
    "monitor",
    "program",
    "function",
    "variable",
    "compiler",
    "pointer",
    "integer",
    "algorithm"
    };


    printf("Are you ready to play hangman?\n\n");
    printf("Generating random word\n");
    while (i < delay ) {
        printf("\rLoading   ");
        fflush(stdout);
        sleep(1);

        printf("\rLoading.");
	jfflush(stdout);
        sleep(1);

        printf("\rLoading..");
        fflush(stdout);
        sleep(1);

        printf("\rLoading...");
        fflush(stdout);
        sleep(1);

        i++;
    }
    printf("\nYour word was %s", wordsArr[num]);
    return 0;
}
